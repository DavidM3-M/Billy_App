<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center"
    android:layout_marginBottom="6dp">

    <!-- Botón de eliminar a la izquierda (más pequeño) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEliminarIngreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🗑"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D32F2F"
        app:cornerRadius="10dp"
        android:layout_marginEnd="6dp"/>

    <!-- Contenedor para los datos del ingreso -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txtMontoIngreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtFechaIngreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#808080"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtDescripcionIngreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Botón de editar a la derecha (más pequeño) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditarIngreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✏"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFA000"
        app:cornerRadius="10dp"
        android:layout_marginStart="6dp"/>
</LinearLayout>